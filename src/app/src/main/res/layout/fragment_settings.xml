<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ebebeb"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/cgt_ll_me_userInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/demo_selector_setting_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="8dip"
            android:src="@drawable/user_picture" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anson Hu"
                android:textColor="@color/color_353535"
                android:textSize="16sp" />

            <!--<TextView-->
            <!--android:id="@+id/cgt_tv_me_weixinNum"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="5dip"-->
            <!--android:text="：lijian374452668"-->
            <!--android:textColor="@color/color_b1b1b1"-->
            <!--android:textSize="14sp" />-->
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@color/white"
        android:orientation="vertical">

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/chat_setting_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dd0000"
            android:text="退出登录" />

        <com.gc.materialdesign.views.ButtonRectangle
            android:layout_marginTop="5dip"
            android:id="@+id/chat_setting_logout_clean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dd0000"
            android:text="退出登录并清除缓存" />

    </LinearLayout>

</LinearLayout>