<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/list_item_chat_detail_send"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height"
        android:background="@color/gray"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/list_item_chat_detail_send_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/list_item_chat_detail_send_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/list_item_chat_detail_send_time" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/list_item_chat_detail_reply"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height"
        android:background="@color/gray"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/list_item_chat_detail_reply_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/list_item_chat_detail_reply_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/list_item_chat_detail_reply_time" />
    </RelativeLayout>

</RelativeLayout>