<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <EditText
        android:id="@+id/login_edittext_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login_account" />

    <Button
        android:id="@+id/login_textview_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_edittext_account"
        android:gravity="center"
        android:text="@string/login_login" />
    
    <LinearLayout
        android:id="@+id/layout_channel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_textview_login" >
        
        <EditText
        android:id="@+id/login_edittext_channel_subscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login_channel_subscribe_hint" />
        
        <Button
           android:id="@+id/login_button_channel_subscribe"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="@string/login_channel_subscribe_button" />
        
        <EditText
	       android:id="@+id/login_edittext_channel_unsubscribe"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:hint="@string/login_channel_unsubscribe_button" />
    
        <Button
            android:id="@+id/login_button_channel_unsubscribe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/login_channel_unsubscribe_button" />
    </LinearLayout>

</RelativeLayout>